				</ee:message>
			</ee:transform>
			<set-variable value="#[400]" doc:name="httpStatus"
				doc:id="c2610f31-6058-47bb-8841-02d3849fac89"
				variableName="httpStatus" />
		</on-error-propagate>
		<on-error-propagate enableNotifications="true"
			logException="true" doc:name="On Error Propagate"
			doc:id="5fec579a-6f82-4ffa-a2cf-096b8a4420be" type="APP:NULL_VALUE">
			<ee:transform doc:name="Error message"
				doc:id="7bef571b-37c0-4f2c-a92a-c25d64626590">
				<ee:message>
					<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	message: error.description
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<set-variable value="#[400]" doc:name="httpStatus"
				doc:id="0e89f3e4-eddb-4110-adc1-ba6dd39d6909"
				variableName="httpStatus" />
		</on-error-propagate>
		<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="ee7c143d-0d51-43cf-a0fd-4b5c0ad1fb07" type="HTTP:CONNECTIVITY">
			<ee:transform doc:name="Error message" doc:id="c43b302b-3a04-4513-92df-fd439c25228a" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	message: error.description
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<set-variable value="#[500]" doc:name="httpStatus" doc:id="66af9878-70f5-4989-b133-52cf5344ac2e" variableName="httpStatus"/>
		</on-error-propagate>
		<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="5bff7da9-c9e1-4288-bc46-9affaf1fc5df" type="APP:EMPTY_COLLECTION">
			<ee:transform doc:name="Error message" doc:id="f3836bf6-ddbd-4162-b353-d6789459cc5b" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	message: error.description
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<set-variable value="#[400]" doc:name="httpStatus" doc:id="20149a43-cc2d-4f87-9883-5447f39c6313" variableName="httpStatus"/>
		</on-error-propagate>
	</error-handler>
</mule>
